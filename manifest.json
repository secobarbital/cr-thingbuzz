{
  "name": "Thingbuzz to go",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Take thingbuzz to go",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon_1.png",
    "default_title": "Thingbuzz",
    "default_popup": "popup.html"
  },
  "homepage_url": "http://www.thingbuzz.com/",
  "permissions": [
    "tabs",
    "http://*/*"
  ]
}
